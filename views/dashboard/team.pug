              label(for='surpriseParticipant2Email') Surprise Participant 2 Email
              input#surpriseParticipant2Email(type='text', name='surpriseParticipant2Email', value=currentUser.team.surprise.p2.email, placeholder='Surprise Participant 2 Email')
              
            h3.center.mono &nbsp;
            
            .card.form.submit
              input(type='submit', value='Save changes')
